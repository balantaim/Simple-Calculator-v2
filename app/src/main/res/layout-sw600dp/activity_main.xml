<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012"
        app:layout_constraintVertical_weight="3">

        <TextView
            android:id="@+id/txtPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/txtLegacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="34dp"
            android:textAlignment="textEnd"
            android:textSize="56sp" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/del"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:onClick="cleanAll"
                android:text="DEL"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backspace"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:onClick="clearWord"
                android:text="back"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pi"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="π"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/percent"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button"
                android:fontFamily="@font/stencil"
                android:onClick="operatorsEvent"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/xy"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:onClick="operatorsEvent"
                android:src="@drawable/ic_xy_tablet" />

            <ImageButton
                android:id="@+id/x2"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:onClick="xPowered"
                android:src="@drawable/ic_x2_tablet" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sqrt"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:onClick="sqrt"
                android:text="√"
                android:textColor="@color/white"
                android:textSize="48sp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/plus"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button"
                android:fontFamily="@font/stencil"
                android:onClick="operatorsEvent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seven"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eight"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nine"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minus"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button"
                android:fontFamily="@font/stencil"
                android:onClick="operatorsEvent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/four"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/five"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/six"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplication"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button"
                android:fontFamily="@font/stencil"
                android:onClick="operatorsEvent"
                android:text="x"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/one"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/two"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/three"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/division"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button"
                android:fontFamily="@font/stencil"
                android:onClick="operatorsEvent"
                android:text="÷"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/comma"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="."
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/plus_minus"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="+/-"
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/equal"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button_equal"
                android:fontFamily="@font/stencil"
                android:onClick="equalEvent"
                android:text="="
                android:textColor="@color/white"
                android:textSize="48sp"
                tools:layout_editor_absoluteX="104dp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
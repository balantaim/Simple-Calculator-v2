<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="3">

        <TextView
            android:id="@+id/txtPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="textEnd"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="24sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeStepGranularity="2sp"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/txtLegacy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/txtLegacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPanel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/del"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:lines="1"
                android:onClick="cleanAll"
                android:text="DEL"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backspace"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:lines="1"
                android:onClick="clearWord"
                android:text="back"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/comma"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="."
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/equal"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button_equal"
                android:fontFamily="@font/stencil"
                android:onClick="equalEvent"
                android:text="="
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sqrt"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:onClick="sqrt"
                android:text="âˆš"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seven"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eight"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nine"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/plus"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button"
                android:fontFamily="@font/stencil"
                android:onClick="operatorsEvent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/xy"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:contentDescription="@string/xy"
                android:onClick="operatorsEvent"
                android:padding="46dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_xy"
                tools:ignore="UsingOnClickInXml,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/four"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/five"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/six"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minus"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button"
                android:fontFamily="@font/stencil"
                android:onClick="operatorsEvent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/x2"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:contentDescription="@string/x2"
                android:onClick="xPowered"
                android:padding="46dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_x2"
                tools:ignore="UsingOnClickInXml,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/one"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/two"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/three"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplication"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button"
                android:fontFamily="@font/stencil"
                android:onClick="operatorsEvent"
                android:text="x"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pi"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="Ï€"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/plus_minus"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/third_button"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="+/-"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/simple_button"
                android:contentDescription="@string/btn_zero"
                android:fontFamily="@font/stencil"
                android:onClick="addNumbersToString"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/percent"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button"
                android:fontFamily="@font/stencil"
                android:onClick="operatorsEvent"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/division"
                android:layout_width="20pt"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/secondary_button"
                android:fontFamily="@font/stencil"
                android:onClick="operatorsEvent"
                android:text="Ã·"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="HardcodedText,UsingOnClickInXml,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="104dp" />

        </TableRow>

    </TableLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

</androidx.constraintlayout.widget.ConstraintLayout>
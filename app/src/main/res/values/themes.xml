<resources>
    <!-- Base application theme. -->
    <style name="Theme.SimpleCalculatorV2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/orange_600</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/teal_850</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_black</item>
        <item name="colorSecondaryVariant">@color/teal_850</item>
        <item name="colorOnSecondary">@color/white_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <!-- Popup menu background -->
        <item name="android:itemBackground">@color/gray</item>
        <item name="preserveIconSpacing">true</item>
    </style>
</resources>
